<div class="flex flex-col h-screen">
  <div class="bg-main text-white text-center py-6 flex">
    <div class="flex justify-center relative items-center w-full">
      <i class="fas fa-bars text-2xl text-white ml-2 absolute left-0 pl-2 cursor-pointer"></i>
      <h2 class="uppercase text-xl">Categories</h2>
      <i class="fas fa-search text-2xl absolute right-0 mr-2 pr-2 bg-main text-white rounded hover:cursor-pointer"></i>
    </div>
  </div>
  <div class="bg-gray-200 text-text flex-grow relative">
    <div>
      <% if @categories.length > 0 %>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <h3 class="bg-white p-2">
          <span>Total amount:</span>
          <span class="text-right">$<%= @total_amount %></span>
        </h3>
        <div class="flex flex-col space-y-4">
          <% icons = {
  shopping: "fa-shopping-cart",
  transfers: "fa-exchange-alt",
  transportation: "fa-bus",
  groceries: "fa-shopping-basket",
  services: "fa-wrench",
  restaurants: "fa-utensils",
  utilities: "fa-bolt",
  cash: "fa-money-bill-wave",
  health: "fa-heartbeat",
  entertaiments: "fa-film"
} %>
          <% @categories.each do |category| %>
            <div class="bg-white flex items-center p-3 cursor-pointer hover:bg-gray-100">
              <% if category.icon.in?(['shopping', 'transfers', 'transportation', 'groceries', 'services', 'restaurants', 'utilities', 'cash', 'health', 'entertaiments']) %>
                <i class="fas <%= icons[category.icon.to_sym] %> text-2xl text-white p-2 rounded-lg bg-second"></i>
                <div class="">SUKA</div>
              <% else %>
                <img src="<%= category.icon %>" class="w-12 h-12 mr-3" alt="<%= category.name %> Icon">
              <% end %>
              <div class="flex-grow text-right">
                <div class="text-text">
                  <%= link_to category.name, category_movements_path(category), class: "text-blue-500" %>
                  <p class="text-right text-dark">$<%= category.total_amount(current_user.id) %></p>
                </div>
                <hr />
                <div class="text-text">
                  <small><%= category.created_at.strftime("%d %b %Y") %></small>
                  <%= link_to "Delete", category, method: :delete, class: "btn btn-primary btn-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <i class="text-center">Welcome To The Category Page No Category Exists Please Add One!</i>
      <% end %>
    </div>
  </div>
  <div class="fixed bottom-0 w-full">
    <div class="bg-second">
      <div class="text-center mt-auto p-8 text-white">
        <%= link_to "Create Category", new_category_path, class: "btn btn-outline-white border-2 border-white p-4 font-semibold hover:bg-white hover:text-second uppercase w-full" %>
      </div>
    </div>
  </div>
</div>
